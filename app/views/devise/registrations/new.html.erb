
<div class="text-center mt-5">
<p class="fs-5 fw-bold">会員情報入力</p>
</div>

<%= form_with model: @user, url: user_registration_path, local: true do |f| %>

<%= render 'shared/error_messages', model: f.object %>

<div class="field mb-3 w-75 mx-auto">
  <%= f.label :メールアドレス, class:"form-label", for:"user_email" %>
  <span class="badge badge-secondary bg-secondary">必須</span>
  <%= f.email_field :email, autofocus: true, class:"form-control", id:"user_email" %>
</div>

<div class="field mb-3 w-75 mx-auto">
  <%= f.label :パスワード, class: "form-label", for:"user_password" %>
  <span class="badge badge-secondary bg-secondary">必須</span>
  <%= f.password_field :password, class:"form-control", placeholder:"6文字以上の半角英数字" %>
</div>

<div class="field mb-3 w-75 mx-auto">
  <%= f.label :パスワード（確認）, class: "form-label", for:"user_password_confirmation" %>
  <span class="badge badge-secondary bg-secondary">必須</span>
  <%= f.password_field :password_confirmation, class:"form-control", placeholder:"同じパスワードを入力して下さい" %>
</div>

<div class="field mb-3 w-75 mx-auto">
  <%= f.label :ニックネーム, class:"form-label", for:"user_nickname" %>
  <span class="badge badge-secondary bg-secondary">必須</span>
  <%= f.text_field :nickname, class:"form-control" %>
</div>

<div class="mb-3 w-50 mx-auto">
  <%= f.label :性別, class: "form-label", for:"user_sex_id" %>
  <span class="badge badge-secondary bg-secondary">必須</span>
  <%= f.collection_select(:sex_id, Sex.all, :id, :name, {}, {class:"form-select"}) %>
</div>

<div class="mb-3 w-50 mx-auto">
  <%= f.label :身長, class: "form-label" %>
  <%= f.collection_select(:height_id, Height.all, :id, :name, {}, {class:"form-select"}) %>
</div>

<div class="mb-3 w-50 mx-auto">
  <%= f.label :体重, class: "form-label" %>
  <%= f.collection_select(:weight_id, Weight.all, :id, :name, {}, {class:"form-select"}) %>
</div>

<div class="actions mt-5 d-grid gap-2 col-6 mx-auto w-25">
  <%= f.submit "新規登録", class: "btn btn-primary" %>
</div>

<% end %>